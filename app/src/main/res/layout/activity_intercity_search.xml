<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intercities"
    android:background="@drawable/ic_sign_up">


    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_border">

        <TextView
            android:id="@+id/tv_mtyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes Ano"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/seg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="36dp"
            android:text="Seg" />

        <TextView
            android:id="@+id/ter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/seg"
            android:text="Ter" />

        <TextView
            android:id="@+id/qua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/ter"
            android:text="Qua" />

        <TextView
            android:id="@+id/qui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/qua"
            android:text="Qui" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/qui"
            android:text="Sex" />

        <TextView
            android:id="@+id/sab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/sex"
            android:text="Sab" />

        <TextView
            android:id="@+id/dom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mtyear"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/sab"
            android:text="Qua" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/seg"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_info"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_border">


        <TextView
            android:id="@+id/tv_hourB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="9:50h"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tv_hourE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_hourB"
            android:text="12:00h" />

        <TextView
            android:id="@+id/tv_BPlace"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hourB"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Viana do Castelo"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_EPlace"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hourE"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_BPlace"
            android:text="Porto"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_BPlace"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFC700"
            android:text=":"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_BPlace"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@+id/btn_options"
            android:backgroundTint="#FFC700"
            android:text="+"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_time_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_BPlace"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:text="04h 55m, 334km/h"
            android:textAlignment="center"
            android:textSize="10dp"

            />

        <TextView
            android:id="@+id/connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_dist"
            android:layout_marginStart="100dp"
            android:paddingBottom="10dp"
            android:text="1 connection"
            android:textSize="10dp"

            />


    </RelativeLayout>


</RelativeLayout>