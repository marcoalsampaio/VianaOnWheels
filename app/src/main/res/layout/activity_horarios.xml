<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Horarios"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardBackgroundColor="@color/teal_200" />
    <Spinner
        android:id="@+id/ComboBox_Origem"
        android:layout_marginTop="50dp"
        android:layout_below="@id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></Spinner>
    <Spinner
        android:id="@+id/ComboBox_Destino"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ComboBox_Origem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ComboBox_Destino"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/search"
        android:backgroundTint="#FF5C00"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHorarioEx"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp">

        <TextView
            android:id="@+id/TV_origem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Origem" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>