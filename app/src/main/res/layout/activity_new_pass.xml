<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPassActivity"
    android:background="@drawable/ic_sign_up">

    <TextView
        android:id="@+id/new_pass_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:text="@string/forgot_password"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_pin"
        android:layout_width="310dp"
        android:layout_marginStart="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/new_pass_title"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_secret" />

            <ImageView
                android:id="@+id/iv_line_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_pin"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_line" />

            <EditText
                android:id="@+id/edt_pin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_line_email"
                android:layout_marginStart="40dp"
                android:background="@android:color/transparent"
                android:hint="@string/code"
                android:inputType="number"
                android:padding="0dp"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:ignore="TextFields" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pass"
        android:layout_width="310dp"
        android:layout_marginStart="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/card_pin"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_padlock" />

            <EditText
                android:id="@+id/edt_new_pass"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_line_pass"
                android:layout_marginStart="40dp"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="0dp"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:ignore="TextFields" />

            <ImageView
                android:id="@+id/iv_line_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_pass"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_line" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pass1"
        android:layout_width="310dp"
        android:layout_marginStart="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/card_pass"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_confirm_pass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_padlock" />

            <EditText
                android:id="@+id/edt_new_pass_confirm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_line"
                android:layout_marginStart="40dp"
                android:background="@android:color/transparent"
                android:hint="@string/confirm_pass"
                android:inputType="textPassword"
                android:padding="0dp"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:ignore="TextFields" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_confirm_pass"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_line" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_pass1"
        app:cardCornerRadius="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/gradient_color">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:text="@string/save"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>