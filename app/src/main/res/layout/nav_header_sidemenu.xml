<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_backgroundsidemenu">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/textView" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_aboutUS"
        android:text="@string/about_us"
        android:backgroundTint="#f3f3f3"
        android:textColor="@color/black"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20sp"
        android:textSize="20dp"
        android:onClick="aboutUS"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/nav_deleteAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_aboutUS"
        android:layout_marginTop="490sp"
        android:backgroundTint="#f3f3f3"
        android:text="@string/Delete_Account"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:onClick="deleteAcc"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/nav_logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_deleteAcc"
        android:layout_marginTop="10sp"
        android:backgroundTint="#f3f3f3"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="logout"
        style="?android:attr/borderlessButtonStyle" />



</RelativeLayout>