<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_source"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/button_border">


    <TextView
        android:id="@+id/tv_ida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Ida:"
        android:textSize="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_goPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tv_ida"
        android:textSize="12dp"
        android:text="Ida:"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/tv_desPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tv_goPlace"
        android:text="Ida:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tv_desPlace"
        android:textSize="10dp"
        android:text="Ida:"
        android:layout_marginBottom="10dp"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFC700"
        android:text="36.80â‚¬"
        android:textAlignment="center"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/tv_time_dist"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="10dp"

        />



</RelativeLayout>


